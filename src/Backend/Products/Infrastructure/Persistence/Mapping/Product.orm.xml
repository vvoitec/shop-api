<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Backend\Products\Domain\Product" table="products">
        <embedded name="id" class="App\Backend\Products\Domain\ProductId" use-column-prefix="false" />
        <embedded name="title" class="App\Backend\Products\Domain\ProductTitle" use-column-prefix="false" />
        <embedded name="price" class="App\Backend\Products\Domain\ProductPrice" use-column-prefix="false" />
    </entity>

</doctrine-mapping>